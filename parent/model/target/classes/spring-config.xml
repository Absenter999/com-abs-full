        http://www.springframework.org/schema/context/spring-context.xsd
               http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<context:component-scan base-package="abs.std.full.model.*config*" />
	<context:component-scan base-package="abs.std.full.model.*dao*" />

	<context:component-scan base-package="abs.std.full.model.*service*" />
